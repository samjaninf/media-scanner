{
	"name": "scanner",
	"version": "1.3.4",
	"private": true,
	"description": "",
	"license": "LGPL-3.0",
	"type": "module",
	"main": "dist/index.js",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/CasparCG/media-scanner.git"
	},
	"homepage": "https://github.com/CasparCG/media-scanner",
	"scripts": {
		"postinstall": "husky",
		"dev": "tsx --watch ./src/index.ts",
		"build": "node tools/build.mjs",
		"build-linux-arm64": "run build linux arm64",
		"build-linux-x64": "run build linux x64",
		"build-win32-x64": "run build win32 x64",
		"build:docker": "docker build .",
		"lint:raw": "run eslint --ext .ts --ext .js --ext .tsx --ext .jsx --ext .mts --ext .mjs --ignore-pattern dist",
		"lint": "run check-types && run lint:raw .",
		"lint-fix": "run lint --fix",
		"unit": "node tools/fetch_ffmpeg.mjs && vitest",
		"license-validate": "sofie-licensecheck",
		"check-types": "tsc --noEmit"
	},
	"engines": {
		"node": ">=24.12",
		"yarn": ">=4"
	},
	"author": "",
	"dependencies": {
		"cheerio": "^1.0.0-rc.12",
		"chokidar": "^3.6.0",
		"cors": "^2.8.5",
		"express": "^5.2.1",
		"moment": "^2.30.1",
		"nconf": "^0.13.0",
		"pino": "^10.1.0",
		"pino-http": "^11.0.0",
		"pouchdb-node": "^7.3.1",
		"recursive-readdir": "^2.2.3",
		"rxjs": "^7.8.2",
		"xml2js": "^0.6.2"
	},
	"devDependencies": {
		"@sofie-automation/code-standard-preset": "3.2.0",
		"@types/cors": "^2.8.19",
		"@types/express": "^5.0.6",
		"@types/nconf": "^0.10.7",
		"@types/node": "^24.10.4",
		"@types/pouchdb-node": "^6.1.7",
		"@types/recursive-readdir": "^2.2.4",
		"@types/xml2js": "^0.4.14",
		"@yao-pkg/pkg": "^6.11.0",
		"esbuild": "^0.27.1",
		"eslint": "^9.39.2",
		"husky": "^9.1.7",
		"lint-staged": "^16.2.7",
		"prettier": "^3.7.4",
		"rimraf": "^6.1.2",
		"tslib": "^2.8.1",
		"tsx": "^4.21.0",
		"typescript": "~5.9.3",
		"vitest": "^4.0.15",
		"zip-a-folder": "^4.0.4"
	},
	"packageManager": "yarn@4.12.0",
	"prettier": "@sofie-automation/code-standard-preset/.prettierrc.json",
	"lint-staged": {
		"*.{css,json,md,scss}": [
			"prettier --write"
		],
		"*.{ts,tsx,js,jsx,mts,mjs}": [
			"yarn lint:raw --fix"
		]
	}
}
